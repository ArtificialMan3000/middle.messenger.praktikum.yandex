{
  "name": "web-chat",
  "version": "0.1.0",
  "description": "Web chat like Telegram",
  "scripts": {
    "start": "yarn build && ts-node server.ts",
    "dev": "parcel serve 'static/*.html' 'static/img/*.jpg' 'static/img/*.png'",
    "build": "parcel build 'static/*.html' 'static/img/*.jpg' 'static/img/*.png'",
    "test": "mocha --require ts-node/register './src/**/*.test.ts'",
    "ts-check": "tsc -noEmit",
    "eslint": "eslint ./",
    "stylelint": "stylelint '**/*.@(scss|css)'"
  },
  "author": "Alexander Bosikov <legionerab3000@yandex.ru>",
  "license": "ISC",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "engines": {
    "node": ">=16.14.2"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/resolver-glob": "2.8.0",
    "@parcel/transformer-sass": "2.8.0",
    "@types/chai": "4.3.4",
    "@types/express": "4.17.14",
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.5",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.0.0",
    "chai": "4.3.7",
    "eslint": "8.23.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "4.2.1",
    "mocha": "10.2.0",
    "parcel": "2.8.0",
    "prettier": "2.7.1",
    "stylelint": "14.14.0",
    "stylelint-config-standard-scss": "6.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.4.4",
    "typescript-plugin-css-modules": "3.4.0",
    "yarn-add-no-save": "1.0.3"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "uuid": "9.0.0"
