<div class="auth-form">
  {{#if errorText}}
    <p class="{{css.error}}">Произошла ошибка: {{errorText}}</p>
  {{/if}}
  {{#if loader}}
    <p>Отправка данных...</p>
  {{/if}}
  <div class="fields">
    {{{FirstNameField}}}
    {{{SecondNameField}}}
    {{{LoginField}}}
    {{{EmailField}}}
    {{{PhoneField}}}
    {{{PasswordField}}}
  </div>
  <div class="{{css.buttons}}">
    {{{RegButton}}}
    {{{EnterButton}}}
  </div>
</div>
