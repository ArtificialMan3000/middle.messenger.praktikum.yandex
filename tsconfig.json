{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "target": "es2016",
    "module": "CommonJS",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./*.ts", "src"],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/dist",
    "todos.*",
    "mochaSetup.js"
  ]
}
